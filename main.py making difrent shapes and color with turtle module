import turtle as t
import random
t.Turtle()
t.shape("turtle")
colours = ['LightSeaGreen', 'IndianRed', 'SlateGray',  'DeepSkyBlue', 'Wheat', 'SeaGreen', 'DarkOrchid', 'CornFlowerBlue']
def draw_shape(num_sides):
    angle = 360 / num_sides
    for _ in range(num_sides):
        t.forward(100)
        t.right(angle)



for shape_side_n in range(3, 11):
    t.color(random.choice(colours))
    draw_shape(shape_side_n)

t.exitonclick()